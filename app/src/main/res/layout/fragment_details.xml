<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:layout_margin="10dp">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/pbLoading"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvDetailsSchoolName"
                android:text="Sample School"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsSchoolName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvDetailsDBN"
                android:text="Sample DBN"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsWritingHandle"
                android:text="Avg SAT Writing Score: "
                app:layout_constraintTop_toBottomOf="@id/tvDetailsNumTakersHandle"
                app:layout_constraintEnd_toStartOf="@id/tvDetailsWriting"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsMathHandle"
                android:text="Avg SAT Math Score: "
                app:layout_constraintTop_toBottomOf="@id/tvDetailsWritingHandle"
                app:layout_constraintEnd_toStartOf="@id/tvDetailsMath"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsMath"
                android:text="Sample"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsWritingHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsReadingHandle"
                android:text="Avg SAT Reading Score: "
                app:layout_constraintTop_toBottomOf="@id/tvDetailsMathHandle"
                app:layout_constraintEnd_toStartOf="@id/tvDetailsReading"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsReading"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsMath"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Sample"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsWriting"
                android:text="Sample"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsNumTakersHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsDBN"
                android:id="@+id/tvDetailsNumTakers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Sample"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsNumTakersHandle"
                app:layout_constraintEnd_toStartOf="@id/tvDetailsNumTakers"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsDBN"
                android:text="# of Test Takers: "
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>